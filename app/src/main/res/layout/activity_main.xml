<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="passposs2.kr.hs.emirim.gridcalculater.MainActivity">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_row="0"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/but1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_row="0"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/but2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_row="0"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/but3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_row="0"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/but4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_row="0"
            android:layout_column="4"
            />
        <Button
            android:id="@+id/but5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_row="1"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/but6"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_row="1"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/but7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_row="1"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/but8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_row="1"
            android:layout_column="3"
            />
        <Button
            android:id="@+id/but9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_row="1"
            android:layout_column="4"
            />

        <Button
            android:id="@+id/op1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:layout_row="2"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/op2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:layout_row="3"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/op3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:layout_row="4"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/op4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:layout_row="5"
            android:layout_column="2"
            />


    </GridLayout>
</GridLayout>